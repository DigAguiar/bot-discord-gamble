generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String   @id // ID do Discord
  balance   Int      @default(500)
  bank      Int      @default(0)
  xp        Int      @default(0)
  lastDaily DateTime?
  inventory Item[]
  createdAt DateTime @default(now())
}

model Item {
  id          String   @id @default(uuid())
  templateId  String   
  name        String
  ownerId     String
  owner       User     @relation(fields: [ownerId], references: [id])
  acquiredAt  DateTime @default(now())
}